@model IEnumerable<PapugarniaOnline.Models.Parrot>

@{
    ViewData["Title"] = "Our Parrots";
}
<hr />
<center><h1>Our Parrots</h1></center>


<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr style="background-color:antiquewhite">
            <th>
                @Html.DisplayNameFor(model => model.Quantity)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.TypeDescription)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.KindOfParrot)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Quantity)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.TypeDescription)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.KindOfParrot.Name)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.ID">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.ID">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.ID">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
